generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// Modelo basado en la vista View_creditos_atrasados
model ViewCreditosAtrasados {
  id            Int      @id @default(autoincrement())
  cliente       String   @map("CLIENTE")
  cantCuotas    Int      @map("CANT_CUOTAS")
  concepto      String   @default("Notificaci√≥n de atraso en cuota") @map("CONCEPTO")
  desde         DateTime @map("DESDE")
  totalAdeudado Decimal  @map("TotalAdeudado") @db.Decimal(10, 2)
  numCredito    Int      @map("num_credito")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([numCredito])
  @@index([cliente])
  @@map("View_creditos_atrasados")
}
